<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:fitsSystemWindows="true"
    android:gravity="fill"
    tools:context=".JBSettings" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/refresh_text" />

        <Spinner
            android:id="@+id/spinnerRefresh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/theme_text" />

        <Spinner
            android:id="@+id/spinnerTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/notify_text" />

        <Spinner
            android:id="@+id/spinnerNotify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTranslations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/translations_text" />

        <Spinner
            android:id="@+id/spinnerTranslations"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbWakeLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/wakelock_text" />
        
        <TextView 
            android:text="@string/text_zoom" 
            android:padding="10dp" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/txtTextZoom" />
        
    	<Spinner 
    	    android:id="@+id/spinnerZoom" 
    	    android:layout_width="fill_parent" 
    	    android:layout_height="wrap_content" />
        
    </LinearLayout>

</ScrollView>